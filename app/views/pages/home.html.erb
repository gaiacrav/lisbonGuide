<div class="page">
  <p id="date"> <%= Date.today%> </p>
  <div class="header">
    <h1>ðŸ‡µðŸ‡¹ Welcome to Lisbon! </h1>
    <h2>Find out the best spots in Lisbon <i class="fas fa-heart"></i></h2>
    <h4> We currently have <%= @spots.count%> spots to show you!</h4>
  </div>

  <%= form_tag spots_path, class: 'search-form-control form-group', method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a spot"%>
    <%= submit_tag "Search", class: "btn btn-dark" %>
  <% end %>

  <div class="btn-view-all-spots">
    <%= link_to "View all spots", spots_path, class:"btn btn-dark"%>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


</div>
