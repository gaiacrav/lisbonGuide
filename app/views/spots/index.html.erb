<div class="page">
  <div class="header">
    <h1>Lisbon best spots!</h1>
  </div>

    <% @spots.each do |spot|%>
      <ul class="list-spot">
        <div class="spot-info">
          <li>📍 <%= spot.name %>, <%= spot.description %></li>
         </div>
        <%= link_to "Show", spot_path(spot), class: "btn btn-dark" %>
      </ul>
    <%end%>

  <div class="btn-back">
    <%= link_to "Back", root_path, class:"btn btn-success"%>
  </div>

</div>
