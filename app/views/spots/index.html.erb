<div class="page">
  <div class="header">
    <h1>Lisbon best spots!</h1>
  </div>

  <div class="btn-create">
    <%= link_to "Create a new spot", new_spot_path, class: "btn btn-success"%>
  </div>

      <div class="list-spot-all">
    <% @spots.each do |spot|%>
        <ul class="list-spot">
          <div class="spot-info">
            <li>📍 <%= spot.name %> </li>
          </div>
        <%= link_to "Show", spot_path(spot), class: "btn btn-dark" %>
        </ul>
    <%end%>
    </div>

  <div class="btn-back">
    <%= link_to "Back", root_path, class:"btn btn-success"%>
  </div>

</div>
