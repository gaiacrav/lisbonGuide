<div class="page">
  <div class="header">
    <h1><%= @spot.name%></h1>
    <h4>Good choice üòè </h4>
  </div>

    <div class="spot-image">
      <% if @spot.photo.attached? %>
        <%= cl_image_tag(@spot.photo.key) %>
      <% else %>
        <%= cl_image_tag("lisbon.jpg") %>
      <% end %>
    </div>


  <div class="spot-description">
    <p><%= @spot.description%></p>
  </div>

  <div class="btn-delete">
    <%= link_to "Delete", spot_path(@spot), class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <div class="btn-back">
    <%= link_to "Back", spots_path, class: "btn btn-success"%>
  </div>
</div>

